<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAppearanceBody1">@null</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:toolbarStyle">@style/CustomToolbar</item>
        <!-- Add more custom attributes here -->
    </style>

    <!-- Custom TextView Style -->
    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <!-- Add more custom attributes for TextView -->
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:padding">16dp</item>
        <!-- Add more custom attributes for button -->
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">?android:attr/editTextBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:padding">8dp</item>
        <!-- Add more custom attributes for EditText -->
    </style>

    <!-- Custom Toolbar Style -->
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:titleTextColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:subtitleTextColor">?android:attr/textColorSecondaryInverse</item>
        <!-- Add more custom attributes for Toolbar -->
    </style>

    <!-- Define more custom styles here -->

</resources>
