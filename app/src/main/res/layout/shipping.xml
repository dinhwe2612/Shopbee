<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background">
    <RelativeLayout
        android:id="@+id/relativeLayout_shipping"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white_light_theme"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/buttonBackSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/back_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Black_SemiBold_18dp"
            android:layout_centerHorizontal="true"
            android:text="Shipping Addresses"/>
    </RelativeLayout>
    <ImageView
        android:visibility="gone"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/empty_shipping"
        android:layout_below="@id/relativeLayout_shipping"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/empty"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/relativeLayout_shipping"
        android:id="@+id/recyclerView_shipping"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        tools:listitem="@layout/shipping_item" />

    <androidx.cardview.widget.CardView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/add_byHand"
        android:layout_gravity="center_horizontal"
        app:cardElevation="5dp"
        app:cardCornerRadius="90dp"
        android:outlineAmbientShadowColor="@color/black_light_theme"
        android:outlineSpotShadowColor="@color/black_light_theme"
        app:cardBackgroundColor="@color/pastel_green">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/write"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/add_byLocate"
        android:layout_gravity="center_horizontal"
        app:cardElevation="5dp"
        app:cardCornerRadius="90dp"
        android:outlineAmbientShadowColor="@color/black_light_theme"
        android:outlineSpotShadowColor="@color/black_light_theme"
        app:cardBackgroundColor="@color/pastel_green">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/location"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/addNewCard"
        android:layout_gravity="center_horizontal"
        app:cardElevation="5dp"
        app:cardCornerRadius="90dp"
        android:outlineAmbientShadowColor="@color/black_light_theme"
        android:outlineSpotShadowColor="@color/black_light_theme"
        app:cardBackgroundColor="@color/black_light_theme">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plus_icon"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>