<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/slight_rounded_white_rectangle"
    android:layout_width="343dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:layout_height="164dp">
    <RelativeLayout
        android:layout_width="343dp"
        android:layout_height="164dp">
        <TextView
            android:id="@+id/orderNumber"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentStart="true"
            style="@style/Black_SemiBold_16dp"
            android:text="Order No1947034"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/date"
            android:text="05-12-2019"
            style="@style/Gray_Regular_14dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginStart="15dp"
            style="@style/Gray_Regular_14dp"
            android:layout_below="@id/orderNumber"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="Tracking number: "
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_toRightOf="@id/textView"
            style="@style/Black_Medium_14dp"
            android:layout_below="@id/orderNumber"
            android:layout_marginTop="10dp"
            android:text="IW3475453455"
            android:id="@+id/trackingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginStart="15dp"
            style="@style/Gray_Regular_14dp"
            android:layout_below="@id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Quantity: "
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_toRightOf="@id/textView4"
            style="@style/Black_Medium_14dp"
            android:layout_below="@id/textView"
            android:layout_marginTop="8dp"
            android:text="3"
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            style="@style/Black_Medium_14dp"
            android:layout_below="@id/textView"
            android:layout_marginTop="8dp"
            android:text="112$"
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_toLeftOf="@id/totalAmount"
            android:layout_marginEnd="15dp"
            style="@style/Gray_Regular_14dp"
            android:layout_below="@id/textView"
            android:layout_marginTop="8dp"
            android:text="Total Amount: "
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            style="@style/Green_Medium_14dp"
            android:layout_below="@id/textView7"
            android:layout_marginTop="22dp"
            android:text="Delivered"
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:background="@drawable/rounded_white_rectangle_black_stroke"
            android:layout_marginStart="15dp"
            style="@style/Black_Medium_14dp"
            android:layout_below="@id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:text="Details"
            android:id="@+id/button_details"
            android:layout_width="98dp"
            android:layout_height="36dp">

        </TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</layout>
