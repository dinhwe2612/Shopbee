<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white_light_theme"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/back_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Black_SemiBold_18dp"
            android:layout_centerHorizontal="true"
            android:text="Order Detail"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:background="@color/white_background">
        <RelativeLayout
            android:background="@color/white_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/orderNumberText"
                android:text="Order No."
                style="@style/Black_SemiBold_16dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/orderNumber"
                android:text="1947034"
                android:layout_toRightOf="@id/orderNumberText"
                style="@style/Black_SemiBold_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date"
                android:layout_below="@id/top_bar"
                android:text="05-12-2019"
                style="@style/Gray_Regular_14dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView"
                android:text="Tracking number: "
                style="@style/Gray_Regular_14dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/orderNumberText"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/trackingNumber"
                style="@style/Black_Medium_14dp"
                android:text="3475453455"
                android:layout_toRightOf="@id/textView"
                android:layout_marginTop="10dp"
                android:layout_below="@id/orderNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/status"
                android:text="Delivered"
                android:layout_below="@id/textView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                style="@style/Green_Medium_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/quantity"
                android:layout_below="@id/trackingNumber"
                android:layout_marginTop="15dp"
                android:text="3"
                style="@style/Black_Medium_14dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_toRightOf="@id/quantity"
                android:layout_below="@id/textView"
                android:layout_marginTop="15dp"
                android:text=" items"
                style="@style/Black_Medium_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                tools:listitem="@layout/order_details_item"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/quantity"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_below="@id/recyclerView"
                android:id="@+id/textView7"
                android:text="Order Information"
                style="@style/Black_Medium_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_below="@id/textView7"
                android:id="@+id/textView8"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="347dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentStart="true"
                        style="@style/Gray_Regular_14dp"
                        android:text="Shipping address:"
                        android:layout_width="122dp"
                        android:layout_height="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/shippingAddress"
                        style="@style/Black_Medium_14dp"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:gravity="start"
                        android:text="3 Newbridge Court, Chino Hills, CA 91709, United States"
                        android:textAlignment="viewStart">

                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="347dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/paymentMethodText"
                        android:layout_alignParentStart="true"
                        style="@style/Gray_Regular_14dp"
                        android:text="Payment method:"
                        android:layout_width="122dp"
                        android:layout_height="20dp"/>

                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:id="@+id/paymentMethodImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/paymentMethodText"
                        android:background="@drawable/wallet">
                        <ImageView
                            android:id="@+id/isShopbeePay"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="3dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/bee"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@id/paymentMethodImage"
                        android:id="@+id/paymentMethod"
                        android:text="Shopbee Pay"
                        style="@style/Black_Medium_14dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="347dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/deliveryMethodText"
                        android:layout_alignParentStart="true"
                        style="@style/Gray_Regular_14dp"
                        android:text="Delivery method:"
                        android:layout_width="122dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/deliveryMethod"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@id/deliveryMethodText"
                        android:text="BEExp, 3 days"
                        style="@style/Black_Medium_14dp"
                        android:textAlignment="viewStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/discountLayout"
                    android:layout_marginTop="15dp"
                    android:layout_width="347dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentStart="true"
                        style="@style/Gray_Regular_14dp"
                        android:textAlignment="viewStart"
                        android:text="Voucher Shopbee:"
                        android:layout_width="126dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/discount"
                        android:text="-10$"
                        style="@style/Black_Medium_14dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:layout_alignParentEnd="true"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="347dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_alignParentStart="true"
                        android:textAlignment="viewStart"
                        style="@style/Gray_Regular_14dp"
                        android:text="Total Amount:"
                        android:layout_width="122dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/totalAmount"
                        android:text="103$"
                        style="@style/Black_Medium_14dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:layout_alignParentEnd="true"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/textView8"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <TextView
                    android:id="@+id/reorder"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded_white_rectangle_black_stroke"
                    android:text="Reorder"
                    android:gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="36dp"/>
                <TextView
                    android:id="@+id/leave_feedback"
                    android:layout_marginStart="10dp"
                    style="@style/Red_Button_White_Text"
                    android:text="Leave feedback"
                    android:gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="36dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
</layout>
