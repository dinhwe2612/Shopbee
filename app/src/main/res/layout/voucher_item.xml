<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="120dp"
    android:id="@+id/typeOfVoucher"
    android:background="@color/white_light_theme"
    android:layout_marginEnd="10dp">
    <RelativeLayout
        android:layout_width="120dp"
        android:background="#fffae0"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iconVoucher"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shopbee_voucher_icon"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/typeVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Black_Medium_14dp"
                android:layout_below="@id/iconVoucher"
                android:text="New User"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/nameVoucher"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10% OFF"
            style="@style/Red_SemiBold_16dp"/>
        <TextView
            android:layout_toRightOf="@id/nameVoucher"
            android:id="@+id/subVoucher"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" up to $5"
            style="@style/Black_SemiBold_14dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Black_Regular_14dp"
            android:background="@drawable/slight_rounded_white_rectangle_red_stroke"
            android:text="  Limited  "/>
        <TextView
            android:layout_below="@id/subVoucher"
            android:id="@+id/code"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPB123456789"
            style="@style/Black_SemiBold_14dp"/>
        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="5dp"
                android:id="@+id/clockIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/clock_icon"/>
            <TextView
                android:id="@+id/dueto"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/clockIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due to: 04-12-2024"
                style="@style/Black_Regular_14dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/saveVoucher"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            style="@style/White_Medium_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/rounded_red_rectangle"
            android:text="Save"/>
    </RelativeLayout>
</LinearLayout>
</layout>