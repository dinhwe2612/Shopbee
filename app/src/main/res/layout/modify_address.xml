<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_background">
    <RelativeLayout
        android:id="@+id/relativeLayout_shipping"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white_light_theme"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/buttonBackSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/back_icon" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Black_SemiBold_18dp"
            android:layout_centerHorizontal="true"
            android:text="Adding Shipping Address"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/relativeLayout_shipping"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:padding="8dp"
            style="@style/AccountEditText_Background">
            <TextView
                android:visibility="gone"
                android:id="@+id/name_hint"
                style="@style/Gray_Regular_11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full name" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AccountEditText_Background"
                android:padding="1dp">
                <EditText
                    android:id="@+id/name"
                    style="@style/EditText"
                    android:layout_width="325dp"
                    android:layout_height="47dp"
                    android:hint="Full name"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:padding="8dp"
            style="@style/AccountEditText_Background">
            <TextView
                android:visibility="gone"
                android:id="@+id/address_hint"
                style="@style/Gray_Regular_11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AccountEditText_Background"
                android:padding="1dp">
                <EditText
                    android:id="@+id/address"
                    style="@style/EditText"
                    android:layout_width="325dp"
                    android:layout_height="47dp"
                    android:hint="Address"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/city_layout"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:padding="8dp"
            style="@style/AccountEditText_Background">
            <TextView
                android:visibility="gone"
                android:id="@+id/city_hint"
                style="@style/Gray_Regular_11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AccountEditText_Background"
                android:padding="1dp">
                <EditText
                    android:id="@+id/city"
                    style="@style/EditText"
                    android:layout_width="325dp"
                    android:layout_height="47dp"
                    android:hint="City"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/state_layout"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:padding="8dp"
            style="@style/AccountEditText_Background">
            <TextView
                android:visibility="gone"
                android:id="@+id/state_hint"
                style="@style/Gray_Regular_11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State/Province/Region"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AccountEditText_Background"
                android:padding="1dp">
                <EditText
                    android:id="@+id/state"
                    style="@style/EditText"
                    android:layout_width="325dp"
                    android:layout_height="47dp"
                    android:hint="State/Province/Region"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zip_layout"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:padding="8dp"
            style="@style/AccountEditText_Background">
            <TextView
                android:visibility="gone"
                android:id="@+id/zip_hint"
                style="@style/Gray_Regular_11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip Code (Postal Code)" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AccountEditText_Background"
                android:padding="1dp">
                <EditText
                    android:id="@+id/zip"
                    style="@style/EditText"
                    android:layout_width="325dp"
                    android:layout_height="47dp"
                    android:hint="Zip Code (Postal Code)"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/country_layout"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:padding="8dp"
            style="@style/AccountEditText_Background">
            <TextView
                android:visibility="gone"
                android:id="@+id/country_hint"
                style="@style/Gray_Regular_11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AccountEditText_Background"
                android:padding="1dp">
                <TextView
                    android:id="@+id/country"
                    style="@style/Gray_Medium_14dp"
                    android:textAlignment="viewStart"
                    android:layout_width="325dp"
                    android:layout_height="47dp"
                    android:text="Country"/>
                <ImageView
                    android:layout_toLeftOf="@id/button_next"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/countryImage"
                    android:layout_width="36dp"
                    android:layout_height="24dp"/>
                <ImageView
                    android:id="@+id/button_next"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/save_address"
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="25dp"
            android:outlineAmbientShadowColor="@color/red"
            android:outlineSpotShadowColor="@color/red"
            app:cardBackgroundColor="@color/red">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SAVE ADDRESS"
                style="@style/White_Medium_14dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
</layout>