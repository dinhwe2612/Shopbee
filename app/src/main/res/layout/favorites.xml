<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.99"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Background"
    android:orientation="vertical">
    <include
        layout="@layout/element_toolbar"/>
    <LinearLayout
        android:background="@color/white_light_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/favorites"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Black_Bold_34dp"
                android:text="Favorites"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/sign_in"
                android:layout_alignBottom="@id/favorites"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                style="@style/White_Button_Gray_Stroke_Black_Text"
                android:text="Sign in"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="30dp">
            </TextView>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="14dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/tag_favorite">
        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:visibility="gone"
                android:layout_marginStart="14dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/filter_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filters"
                    style="@style/Black_Regular_11dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/swap_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: low to high"
                    style="@style/Black_Regular_11dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imageView"
                android:scaleType="fitCenter"
                android:layout_marginEnd="14dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grid_view_icon" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/empty_favorites"
        style="@style/Gray_SemiBold_16dp"
        android:text="Your favorites is empty!"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:id="@+id/loading"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="343dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/loading1"
            android:background="@drawable/color_transition"
            android:layout_width="343dp"
            android:layout_marginBottom="10dp"
            android:layout_height="116dp">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/loading2"
            android:background="@drawable/color_transition"
            android:layout_width="343dp"
            android:layout_marginBottom="10dp"
            android:layout_height="116dp">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/loading3"
            android:background="@drawable/color_transition"
            android:layout_width="343dp"
            android:layout_marginBottom="10dp"
            android:layout_height="116dp">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/loading4"
            android:background="@drawable/color_transition"
            android:layout_width="343dp"
            android:layout_marginBottom="10dp"
            android:layout_height="116dp">

        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        style="@style/Background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/favorite_item">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
</layout>