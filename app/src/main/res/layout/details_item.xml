<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:layout_height="20dp">
    <TextView
        android:id="@+id/variation_type"
        style="@style/Black_Regular_11dp"
        android:text="Variation type: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_toRightOf="@id/variation_type"
        style="@style/Gray_Regular_11dp"
        android:text="variation details"
        android:id="@+id/variation_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
</RelativeLayout>
</layout>