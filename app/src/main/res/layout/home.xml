<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:background="@color/white_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:background="@color/white_background">

        <RelativeLayout
            android:id="@+id/searchLayout"
            android:layout_marginTop="10dp"
            android:layout_width="280dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/slight_rounded_white_rectangle_gray_stroke">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/search_icon_top_bar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/searchIcon"
                android:text="Ao thun nam"
                style="@style/Black_Medium_14dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/bagIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bag_icon_white"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/messageIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_message_white"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/bagIcon"
            android:layout_toEndOf="@id/searchLayout"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/Background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/bannerLayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bannerRCV"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/banner_item"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_below="@+id/bannerLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                app:cardElevation="25dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/scanIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_scan_black"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="35dp"
                        android:background="@color/gray"
                        android:layout_toEndOf="@id/scanIcon"
                        android:layout_centerVertical="true" />
                    <RelativeLayout
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/scanIcon">
                        <RelativeLayout
                            android:id="@+id/shobeePay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toStartOf="@id/splitView"
                            android:layout_marginEnd="5dp">
                            <ImageView
                                android:id="@+id/walletIcon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_wallet_red"
                                android:layout_marginTop="5dp"
                                android:layout_alignParentTop="true"/>
                            <TextView
                                android:id="@+id/shobeePayText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ShopbeePay"
                                android:layout_toEndOf="@id/walletIcon"
                                style="@style/Black_SemiBold_16dp"
                                android:layout_alignBottom="@id/walletIcon"
                                android:layout_marginStart="5dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loan with low interest"
                                android:layout_below="@id/shobeePayText"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/voucher"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/splitView"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp">
                            <ImageView
                                android:id="@+id/voucherIcon"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:src="@drawable/icon_voucher"
                                android:layout_marginTop="12dp"
                                android:layout_marginStart="5dp"
                                android:layout_alignParentTop="true"/>
                            <TextView
                                android:id="@+id/voucherText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Voucher"
                                android:layout_marginTop="15dp"
                                android:layout_toEndOf="@id/voucherIcon"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="6dp"
                                style="@style/Black_SemiBold_16dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Voucher up to 80%"
                                android:layout_below="@id/voucherText"
                                android:layout_marginStart="5dp"/>
                        </RelativeLayout>
                        <View
                            android:id="@+id/splitView"
                            android:layout_width="1dp"
                            android:layout_height="35dp"
                            android:background="@color/gray"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/menuLayout"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_below="@id/bannerLayout"
                android:background="#DAFFFFFF">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="70dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_myorder"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Order"
                                style="@style/Black_Regular_16dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoriesRCV"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/categoryhome_item"
                    android:layout_marginBottom="30dp"/>
                <LinearLayout
                    android:id="@+id/eventLayout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/categoriesRCV"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp">

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/menuLayout">
                <TextView
                    android:text="Hot Deal"
                    android:id="@+id/hotDealText"
                    style="@style/Black_Bold_34dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dealRCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/deal_item"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Deal"
                    style="@style/Black_Bold_34dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newDealRCV"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/deal_item"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collection"
                    style="@style/Black_Bold_34dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/newCollection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_collection"
                        android:scaleType="centerCrop"/>
                    <TextView
                        style="@style/Black_Bold_34dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/newCollection"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="New Collection"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/summerSale"
                        android:text="Summer\nSale"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/newCollection"
                        style="@style/Red_Bold_34dp"
                        android:layout_toStartOf="@id/menshoodies"
                        android:layout_above="@id/black"/>
                    <ImageView
                        android:id="@+id/menshoodies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mens_hoodies"
                        android:layout_below="@+id/newCollection"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Men's\nhoodies"
                        android:layout_alignTop="@id/menshoodies"
                        android:layout_alignBottom="@+id/menshoodies"
                        android:layout_alignStart="@id/menshoodies"
                        android:layout_alignParentEnd="true"
                        style="@style/Black_Bold_34dp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:id="@+id/black"
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        android:layout_alignBottom="@id/menshoodies"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/menshoodies"
                        android:scaleType="centerCrop"
                        android:src="@drawable/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black"
                        android:layout_alignBottom="@+id/black"
                        android:layout_alignParentStart="true"
                        style="@style/Black_Bold_34dp"
                        android:textColor="@color/white"
                        android:layout_margin="15dp"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended"
                    style="@style/Black_Bold_34dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommendedRCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    android:orientation="vertical"
                    tools:listitem="@layout/deal_item"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
</layout>