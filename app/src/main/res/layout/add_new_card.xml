<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/select_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/navi_bar"/>
            <TextView
                android:id="@+id/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new card"
                android:layout_marginTop="15dp"
                style="@style/Black_SemiBold_18dp"/>

            <LinearLayout
                android:id="@+id/name_on_card_layout"
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:padding="8dp"
                style="@style/AccountEditText_Background">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/name_hint"
                    style="@style/Gray_Regular_11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name on card" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AccountEditText_Background"
                    android:padding="1dp">
                    <EditText
                        android:id="@+id/name"
                        style="@style/EditText"
                        android:layout_width="325dp"
                        android:layout_height="47dp"
                        android:hint="Name on card"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/card_number_layout"
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:padding="8dp"
                style="@style/AccountEditText_Background">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/card_number_hint"
                    style="@style/Gray_Regular_11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card number" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AccountEditText_Background"
                    android:padding="1dp">
                    <EditText
                        android:id="@+id/card_number"
                        android:hint="Card number"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        style="@style/EditText"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/type_card_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/master"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/expiry_date_layout"
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:padding="8dp"
                style="@style/AccountEditText_Background">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/expiry_date_hint"
                    style="@style/Gray_Regular_11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiry date" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AccountEditText_Background"
                    android:padding="1dp">
                    <EditText
                        android:id="@+id/expiry_date"
                        android:hint="Expiry date"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        style="@style/EditText"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cvv_layout"
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:padding="8dp"
                style="@style/AccountEditText_Background">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/cvv_hint"
                    style="@style/Gray_Regular_11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CVV" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AccountEditText_Background"
                    android:padding="1dp">
                    <EditText
                        android:id="@+id/cvv"
                        android:hint="CVV"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        style="@style/EditText"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.animsh.animatedcheckbox.AnimatedCheckBox
                    android:id="@+id/checkBoxCard"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    app:border_stroke_width="2dp"
                    app:color_checked="@color/red"
                    app:color_tick="@color/white"
                    app:color_unchecked="@color/white"
                    app:color_unchecked_stroke="@color/black"
                    app:small_tick="true"
                    app:tick_stroke_width="1dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use as default payment method"
                    style="@style/Black_Regular_14dp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/add_card"
                android:layout_width="343dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="25dp"
                android:outlineAmbientShadowColor="@color/red"
                android:outlineSpotShadowColor="@color/red"
                app:cardBackgroundColor="@color/red">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ADD CARD"
                    style="@style/White_Medium_14dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</layout>