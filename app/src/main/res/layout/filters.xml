<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_white_rectangle"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/rounded_white_rectangle"
    android:layout_height="644dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="412dp"
        android:layout_height="44dp">
        <ImageView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:src="@drawable/bottom_sheet_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:layout_below="@id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="600dp">
            <TextView
                android:id="@+id/textView"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:text="Price range"
                style="@style/Black_SemiBold_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <com.example.shopbee.slider.DraggableCircle
                android:id="@+id/draggableCircle"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView"
                android:layout_marginTop="18dp"
                android:layout_width="343dp"
                android:layout_height="40dp">

            </com.example.shopbee.slider.DraggableCircle>
            <TextView
                android:id="@+id/textView1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_below="@id/draggableCircle"
                android:text="Product condition"
                style="@style/Black_SemiBold_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_below="@id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/textView2"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_marginStart="15dp"
                android:layout_below="@id/recyclerView2"
                android:text="Country"
                style="@style/Black_SemiBold_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:visibility="gone"
                android:layout_below="@id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:visibility="gone"
                android:id="@+id/textView3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_below="@id/recyclerView"
                android:text="Category"
                style="@style/Black_SemiBold_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/recyclerView1"
                android:layout_below="@id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/textView4"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_below="@id/recyclerView1"
                android:text="Brand"
                android:visibility="gone"
                style="@style/Black_SemiBold_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:text="adidas Originals, JackJones, Nike, Puma, Vans"
                style="@style/Gray_Regular_11dp"
                android:id="@+id/textView5"
                android:layout_below="@id/textView4"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:id="@+id/imageView"
                android:layout_marginEnd="15dp"
                android:layout_below="@id/textView4"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:src="@drawable/next_button_black"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>
            <androidx.cardview.widget.CardView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_margin="15dp"
                        android:background="@drawable/rounded_white_rectangle_black_stroke"
                        android:text="Discard"
                        style="@style/Black_Medium_14dp"
                        android:layout_width="160dp"
                        android:layout_height="36dp">

                    </TextView>
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_margin="15dp"
                        android:layout_toRightOf="@id/textView6"
                        style="@style/Red_Button_White_Text"
                        android:text="Apply"
                        android:layout_width="160dp"
                        android:layout_height="36dp">

                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


</RelativeLayout>
    </RelativeLayout>
</layout>