<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white_background"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutWallet"
        android:orientation="vertical"
        android:layout_width="344dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your digital wallet"
            style="@style/Black_SemiBold_16dp"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/walletImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/wallet">
                <ImageView
                    android:id="@+id/isShopbeePay"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bee"/>
            </RelativeLayout>
            <TextView
                android:layout_toRightOf="@id/walletImage"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopbee Pay"
                style="@style/Black_Regular_16dp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:visibility="visible"
        android:alpha="1"
        android:id="@+id/layoutCard"
        android:layout_width="344dp"
        android:layout_height="216dp"
        android:background="@drawable/payment_card">
        <ImageView
            android:id="@+id/paymentIcon"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="50dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/cardNumber"
            android:layout_below="@id/paymentIcon"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* * * *   * * * *   * * * *  1 2 3 4"
            style = "@style/White_Regular_24dp"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Holder Name"
                style="@style/White_SemiBold_10dp"/>
            <TextView
                android:id="@+id/cardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Mimikyu"
                style="@style/White_SemiBold_14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date"
                style="@style/White_SemiBold_10dp"/>
            <TextView
                android:id="@+id/expiryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05/23"
                style="@style/White_SemiBold_14dp"/>
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.animsh.animatedcheckbox.AnimatedCheckBox
            android:id="@+id/checkBoxCard"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="4dp"
            app:border_stroke_width="2dp"
            app:color_checked="@color/red"
            app:color_tick="@color/white"
            app:color_unchecked="@color/white"
            app:color_unchecked_stroke="@color/black"
            app:small_tick="true"
            app:tick_stroke_width="1dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use as default payment method"
            style="@style/Black_Regular_14dp"/>
    </LinearLayout>
</LinearLayout>
</layout>