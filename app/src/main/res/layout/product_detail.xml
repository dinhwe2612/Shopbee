<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.example.shopbee.ui.productdetail.ProductDetailViewModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_bar_card"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black_light_theme"
        android:elevation="10dp">
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <LinearLayout
                android:id="@+id/right_icons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/search_bar"
                android:layout_alignParentEnd="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_share"
                    android:layout_marginEnd="20dp"
                    android:onClick="@{()->vm.navigator.shareProduct()}"/>
                <ImageView
                    android:id="@+id/icon_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_more_horiz"
                    android:onClick="@{()->vm.navigator.option()}"/>
            </LinearLayout>
            <TextView
                android:id="@+id/search_bar"
                style="@style/Black_Regular_16dp"
                android:layout_width="240dp"
                android:layout_height="32dp"
                android:background="@drawable/slight_rounded_white_rectangle_gray_stroke"
                android:text="English Books"
                android:textAlignment="center"
                android:layout_toEndOf="@+id/back_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar_card"
        android:layout_above="@+id/buy"
        android:background="@color/white_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/prodPhotosRCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/product_photo_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$35.68"
                    style="@style/Red_Bold_34dp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@color/black_light_theme"
                    android:layout_centerVertical="true"
                    android:layout_alignStart="@+id/original_price"
                    android:layout_alignEnd="@+id/original_price"/>
                <TextView
                    android:id="@+id/original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$49.99"
                    android:layout_toEndOf="@id/current_price"
                    style="@style/Black_SemiBold_24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"/>
                <androidx.cardview.widget.CardView
                    android:background="@drawable/rounded_white_rectangle"
                    app:cardCornerRadius="32dp"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{()->vm.navigator.addFavorite()}">
                    <com.varunest.sparkbutton.SparkButton
                        android:id="@+id/spark_button"
                        android:layout_gravity="center"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:sparkbutton_primaryColor="@color/red_stroke"
                        app:sparkbutton_secondaryColor="@color/red_stroke"
                        app:sparkbutton_activeImage="@drawable/red_heart_icon"
                        app:sparkbutton_inActiveImage="@drawable/add_to_favorites_icon"
                        app:sparkbutton_iconSize="22dp"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Pack Tank Top Bodysuit for Women Sexy Scoop Neck Sleeveless Tank Tops Bodysuits Thong Bodysuit"
                style="@style/Black_Regular_16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="viewStart"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical">
                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srb_clickable="true"
                    app:srb_clearRatingEnabled="true"
                    app:srb_drawableEmpty="@drawable/star_empty_icon"
                    app:srb_drawableFilled="@drawable/star_full_icon"
                    app:srb_isIndicator="true"
                    app:srb_numStars="5"
                    app:srb_rating="0"
                    app:srb_scrollable="true"
                    app:srb_starHeight="14dp"
                    app:srb_starPadding="1dp"
                    app:srb_starWidth="14dp"
                    app:srb_stepSize="0.1" />
                <TextView
                    android:id="@+id/numRatings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
                    style="@style/Black_Regular_14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_light_theme"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Details"
                style="@style/Black_SemiBold_18dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pddetailsRCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                tools:listitem="@layout/productdetail_item"/>
            <TextView
                android:id="@+id/description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                style="@style/Black_SemiBold_18dp"/>
            <TextView
                android:id="@+id/description_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Customers like the ease of use, quality and comfort of the leotard. They mention that the snaps are easy to use, the fabric is good and the texture is smooth. Opinions are mixed on fit."
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="viewStart"
                style="@style/Black_Regular_16dp"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_light_theme"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About product"
                style="@style/Black_SemiBold_18dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/aboutProductRCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_light_theme"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/product_review_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Review"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    style="@style/Black_SemiBold_18dp"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All >"
                    style="@style/Black_Regular_16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:id="@+id/rating_overall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    style="@style/Black_SemiBold_18dp"
                    android:layout_below="@+id/product_review_title"
                    android:layout_toEndOf="@+id/star_icon"
                    android:layout_marginStart="5dp"/>
                <ImageView
                    android:id="@+id/star_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star_full_icon"
                    android:layout_below="@+id/product_review_title"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="out of 5"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="3dp"
                    style="@style/Black_Regular_16dp"
                    android:layout_below="@+id/product_review_title"
                    android:layout_toEndOf="@+id/rating_overall" />
                <TextView
                    android:id="@+id/numGlobalRatings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="77 global ratings"
                    style="@style/Black_Regular_16dp"
                    android:layout_below="@+id/rating_overall"
                    android:layout_marginStart="20dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/customersay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customers Say"
                android:layout_marginTop="10dp"
                style="@style/Black_SemiBold_18dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/customersay_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customers like the ease of use, quality and comfort of the leotard. They mention that the snaps are easy to use, the fabric is good and the texture is smooth. Opinions are mixed on fit."
                style="@style/Black_Regular_16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="viewStart"/>
            <TextView
                android:id="@+id/aigenerated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI-generated from the text of customer reviews"
                style="@style/Black_Regular_16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="viewStart"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_light_theme"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You might also like"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                style="@style/Black_SemiBold_18dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendRCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_light_theme"
        android:fadingEdge="horizontal"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white_light_theme"
            android:elevation="20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:outlineAmbientShadowColor="@color/black_light_theme"
                android:outlineSpotShadowColor="@color/black_light_theme"
                app:cardBackgroundColor="@color/red"
                android:layout_marginEnd="18dp"
                android:onClick="@{()->vm.navigator.addToBag()}">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ADD TO BAG"
                    style="@style/White_Medium_14dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:outlineAmbientShadowColor="@color/black_light_theme"
                android:outlineSpotShadowColor="@color/black_light_theme"
                app:cardBackgroundColor="@color/red"
                android:onClick="@{()->vm.navigator.buyNow()}">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BUY NOW"
                    style="@style/White_Medium_14dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/bag_button"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buy"
        app:cardBackgroundColor="@color/white_light_theme"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:onClick="@{()->vm.navigator.goToBag()}">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_bag_type2"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@color/transparent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bagNumber"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignTop="@+id/bag_button"
        android:layout_alignEnd="@+id/bag_button"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="8dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            style="@style/White_SemiBold_16dp"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>