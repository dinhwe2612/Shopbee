<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="260dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="7dp">
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="260dp"
            android:background="@color/white_light_theme">
            <ImageView
                android:id="@+id/productImg"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_clickable="true"
                app:srb_clearRatingEnabled="true"
                app:srb_drawableEmpty="@drawable/star_empty_icon"
                app:srb_drawableFilled="@drawable/star_full_icon"
                app:srb_isIndicator="true"
                app:srb_numStars="5"
                app:srb_rating="3.3"
                app:srb_scrollable="true"
                app:srb_starHeight="14dp"
                app:srb_starPadding="1dp"
                app:srb_starWidth="14dp"
                app:srb_stepSize="0.1"
                android:layout_below="@id/productImg"
                android:layout_alignStart="@id/productImg"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/numRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                tools:text="(10)"
                style="@style/Gray_Regular_10dp"
                android:layout_toEndOf="@id/ratingBar"
                android:layout_alignBottom="@id/ratingBar"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingBar"
                android:layout_alignStart="@id/ratingBar"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                tools:text="Hello capybara..."
                style="@style/Black_SemiBold_16dp"
                android:layout_marginEnd="6dp"
                android:textAlignment="viewStart"/>
            <TextView
                android:id="@+id/curPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_alignStart="@id/title"
                tools:text="$20"
                style="@style/Red_SemiBold_16dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/oldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$30"
                android:layout_toEndOf="@id/curPrice"
                android:layout_alignBottom="@id/curPrice"
                android:layout_alignTop="@id/curPrice"
                style="@style/Gray_Medium_14dp"
                android:layout_marginStart="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:src="@drawable/dash"
                android:layout_alignStart="@id/oldPrice"
                android:layout_alignEnd="@id/oldPrice"
                android:layout_alignTop="@id/oldPrice"
                android:layout_alignBottom="@id/oldPrice"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>