<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/addressLayout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:outlineAmbientShadowColor="@color/black_light_theme"
        android:outlineSpotShadowColor="@color/black_light_theme"
        app:cardBackgroundColor="@color/white_light_theme">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Black_Medium_14dp"
                android:text="Jane Doe"/>
            <TextView
                android:id="@+id/editAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                style="@style/Red_Medium_14dp"
                android:text="Edit"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/address"
                android:layout_below="@id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                style="@style/Black_Regular_14dp"
                android:text="3 Newbridge Court, Chino Hills, CA 91709, United States"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.animsh.animatedcheckbox.AnimatedCheckBox
                    android:id="@+id/checkBoxCard"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="4dp"
                    app:border_stroke_width="2dp"
                    app:color_checked="@color/red"
                    app:color_tick="@color/white"
                    app:color_unchecked="@color/white"
                    app:color_unchecked_stroke="@color/black"
                    app:small_tick="true"
                    app:tick_stroke_width="1dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use as shipping address"
                    style="@style/Black_Regular_14dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>