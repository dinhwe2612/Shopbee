<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D11F1F"
        android:layout_marginEnd="80dp"
        android:id="@+id/left_chat_layout"
        app:cardCornerRadius="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/White_Regular_24dp"
            android:textSize="18dp"
            android:text="Hello"
            android:padding="8dp"
            android:textAlignment="viewStart"
            android:id="@+id/left_chat_textview"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/sky_blue"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/right_chat_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Black_Regular_18dp"
            android:padding="8dp"
            android:textAlignment="viewStart"
            android:id="@+id/right_chat_textview"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>