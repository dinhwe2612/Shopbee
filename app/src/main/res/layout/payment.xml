<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background">
    <RelativeLayout
        android:id="@+id/relativeLayout_payment"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white_light_theme"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/buttonBackSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/back_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Black_SemiBold_18dp"
            android:layout_centerHorizontal="true"
            android:text="Payment methods"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/relativeLayout_payment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layoutCard"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewPayment"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your payment card"
                    style="@style/Black_SemiBold_16dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@id/textViewPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/payment_item"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_below="@id/layoutCard"
                android:id="@+id/layoutWallet"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your digital wallet"
                    style="@style/Black_SemiBold_16dp"/>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/walletImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/wallet">
                        <ImageView
                            android:id="@+id/isShopbeePay"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="4dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/bee"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_toRightOf="@id/walletImage"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shopbee Pay"
                        style="@style/Black_Regular_16dp"/>
                    <LinearLayout
                        android:layout_below="@id/walletImage"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.animsh.animatedcheckbox.AnimatedCheckBox
                            android:id="@+id/checkBoxWallet"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="4dp"
                            app:border_stroke_width="2dp"
                            app:color_checked="@color/red"
                            app:color_tick="@color/white"
                            app:color_unchecked="@color/white"
                            app:color_unchecked_stroke="@color/black"
                            app:small_tick="true"
                            app:tick_stroke_width="1dp"/>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Use as default payment method"
                            style="@style/Black_Regular_14dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/addressLayout"
        android:layout_gravity="center_horizontal"
        app:cardElevation="5dp"
        app:cardCornerRadius="90dp"
        android:outlineAmbientShadowColor="@color/black_light_theme"
        android:outlineSpotShadowColor="@color/black_light_theme"
        app:cardBackgroundColor="@color/black_light_theme">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plus_icon"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>
