<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:background="@drawable/woodboard"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Over"
            style="@style/Black_Bold_34dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/scoreMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your score is 0."
            android:textAlignment="viewStart"
            style="@style/Black_SemiBold_18dp"
            android:layout_below="@id/title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="You receive a voucher at 2 point."
            android:textAlignment="viewStart"
            style="@style/Black_SemiBold_18dp"
            android:layout_below="@id/scoreMessage"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/homebutton"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/playagain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/playbutton"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</layout>