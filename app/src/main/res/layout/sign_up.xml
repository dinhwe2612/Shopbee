<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Background">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:layout_marginStart="14dp"
        android:layout_marginTop="62dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Black_Bold_34dp"/>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="169dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/AccountEditText_Background">
        <TextView
            style="@style/Gray_Regular_11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AccountEditText_Background"
            android:padding="1dp">
            <EditText
                android:layout_width="343dp"
                android:layout_height="50dp"
                android:layout_toStartOf="@+id/name_checkmark"
                android:hint="Mr. Hint"
                style="@style/EditText"/>
            <ImageView
                android:id="@+id/name_checkmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/correct_mark_icon" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="241dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/AccountEditText_Background">
        <TextView
            style="@style/Gray_Regular_11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AccountEditText_Background"
            android:padding="1dp">
            <EditText
                android:layout_width="343dp"
                android:layout_height="50dp"
                android:layout_toStartOf="@+id/email_checkmark"
                android:hint="nguyenvana123@gmail.com"
                style="@style/EditText"/>
            <ImageView
                android:id="@+id/email_checkmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/correct_mark_icon" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="313dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/AccountEditText_Background">
        <TextView
            style="@style/Gray_Regular_11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AccountEditText_Background"
            android:padding="1dp">
            <EditText
                android:layout_width="343dp"
                android:layout_height="50dp"
                android:layout_toStartOf="@+id/password_checkmark"
                android:inputType="textPassword"
                style="@style/EditText"/>
            <ImageView
                android:id="@+id/password_checkmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/correct_mark_icon" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="393dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/Black_Medium_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:text="Already have an account?"
            tools:layout_editor_absoluteX="201dp"
            tools:layout_editor_absoluteY="400dp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_icon" />
    </LinearLayout>

    <com.example.shopbee.button.button
        style="@style/Red_Button_White_Text"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:text="SIGN UP"
        android:layout_marginTop="441dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        style="@style/Black_Medium_14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or sign in with social account"
        android:layout_marginTop="615dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="647dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            style="@style/Option_Background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/google_icon"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:gravity="center"
            style="@style/Option_Background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/facebook_icon"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>