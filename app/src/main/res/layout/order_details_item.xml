<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="343dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:background="@color/white_light_theme"
    android:layout_marginTop="15dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="104dp">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white_light_theme"
        android:layout_width="343dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/productImage"
            android:src="@drawable/image8"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="104dp"
            android:layout_height="104dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/productName"
                style="@style/Black_SemiBold_14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:text="Pullove"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAlignment="viewStart" />
            <TextView
                android:visibility="gone"
                android:text="Mango"
                style="@style/Gray_Regular_11dp"
                android:id="@+id/textView1"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/variationText1"
                android:text="Color: "
                style="@style/Gray_Regular_11dp"
                android:layout_below="@id/textView1"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/variation1"
                android:text="Black"
                style="@style/Black_Regular_11dp"
                android:layout_toRightOf="@id/variationText1"
                android:layout_below="@id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/variationText2"
                android:text="Size: "
                style="@style/Gray_Regular_11dp"
                android:layout_toRightOf="@id/variation1"
                android:layout_below="@id/textView1"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:visibility="gone"
                android:id="@+id/variation2"
                style="@style/Black_Regular_11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/variationText2"
                android:text="L">

            </TextView>
            <TextView
                android:visibility="gone"
                android:id="@+id/moreText"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Gray_Regular_11dp"
                android:layout_below="@id/textView1"
                android:layout_toRightOf="@id/variation2"
                android:text="More..."/>
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/textView5"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Units: "
                style="@style/Gray_Regular_11dp"
                android:layout_below="@id/variationText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/quantity"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="1"
                style="@style/Black_Regular_11dp"
                android:layout_below="@id/variationText2"
                android:layout_toRightOf="@id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/price"
                android:text='51$'
                style="@style/Black_Medium_14dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</layout>