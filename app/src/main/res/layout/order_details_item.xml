<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="343dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:background="@color/white_light_theme"
    android:layout_marginTop="15dp"
    android:layout_height="104dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white_light_theme"
        android:layout_gravity="center"
        android:layout_width="343dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/image8"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
        <TextView
            android:id="@+id/textView2"
            android:text="Pullover"
            style="@style/Black_SemiBold_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:text="Mango"
            android:layout_marginTop="5dp"
            style="@style/Gray_Regular_11dp"
            android:id="@+id/textView1"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView"
            android:text="Color: "
            style="@style/Gray_Regular_11dp"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView3"
            android:text="Black"
            style="@style/Black_Regular_11dp"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintStart_toEndOf="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView4"
            android:text="Size: "
            style="@style/Gray_Regular_11dp"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintStart_toEndOf="@id/textView3"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:text="L"
            style="@style/Black_Regular_11dp"
            app:layout_constraintTop_toBottomOf="@id/textView1"
            app:layout_constraintStart_toEndOf="@id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/textView5"
            android:layout_marginBottom="15dp"
            android:text="Units: "
            style="@style/Gray_Regular_11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/textView6"
            android:layout_marginBottom="15dp"
            android:text="1"
            style="@style/Black_Regular_11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:text='51$'
            style="@style/Black_Medium_14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>